<!DOCTYPE html>
<html>
<head>
    <
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    @*<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />*@
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title></title>
    <link href="http://fonts.googleapis.com/css?family=PT+Sans:regular,italic,bold,bolditalic" rel="stylesheet" type="text/css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/scripts/jquery-1.10.2.js")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
    @Scripts.Render("~/scripts/jquery.inputmask.js")

    <link href=@Url.Content("~/Content/styles.css") rel="stylesheet" />
    <link href=@Url.Content("~/Content/PagedList.css") rel="stylesheet" />
    <link href=@Url.Content("~/scripts/callmewidget/style.min.css") rel="stylesheet" />



    @Scripts.Render("~/scripts/slick.min.js")
    @Scripts.Render("~/scripts/scripts.js")
    @Scripts.Render("~/scripts/new_script.js")
    @Scripts.Render("~/scripts/dinamik.js")

</head>
<body>

    <div class="container">
        <div class="wrapper">

            <header class="header">

                <a href="\" class="header__logo">
                    <div class="header__logo-title">Гипертрейд</div>
                    <div class="header__logo-desc">техника и компьютерные комплектующие</div>
                </a>
                <br />
                <br />
                <br />
                <div class="header__nav-toggle"></div>
                <nav class="header__nav">
                    <ul>
                        <li><a href="#">Гарантия</a></li>
                        <li>@Ajax.ActionLink("Доставка", "Delivery", "Home", new { }, new AjaxOptions { UpdateTargetId = "ContentId" })</li>
                        <li>@Ajax.ActionLink("Контакты", "Contacts", "Home", new { }, new AjaxOptions { UpdateTargetId = "ContentId" })</li>
                        <li>@Ajax.ActionLink("О компании", "About", "Home", new { }, new AjaxOptions { UpdateTargetId = "ContentId" })</li>
                        <li><a class="test_clk" href="#">Оптовикам</a></li>
                    </ul>

                </nav>

                <div class="header__phone">
                    <div class="header__phone-number">8 (499) 558-08-99;</div>
                    <div class="header__phone-number">8 (495) 789-52-39</div>
                </div>

                <a href="/ShoppingCart/Index" id="link_basket">
                    <div class="header__cart">
                        <div class="header__cart-title">Корзина заказов</div>
                        <div id="header__cart-count-2" class="header__cart-count-2">@Html.Action("CartSummary", "ShoppingCart")</div>

                    </div><!-- .header__cart -->
                </a>

                <form action="" method="post" class="search-form">
                    <input type="text" class="search-form__field" />
                    <input type="submit" value="" class="search-form__button" />
                </form>

            </header><!-- .header -->

            <main class="middle middle__catalog">

                @*<div class="breadcrumbs">
                    </div>*@<!-- .breadcrumbs -->


                <aside class="sidebar">

                    <div class="catalog  active">
                        <div class="catalog__title"><span>Каталог</span></div>
                        @Html.Action("_TreeList", "Home")
                    </div><!-- .catalog -->



                    <div class="sidebar-contacts">
                        <div class="sidebar-contacts__title">Контакты</div>
                        <div class="sidebar-contacts__inner">
                            <div class="sidebar-contacts__address">ТК "Савеловский"<br /> Павилионы: E-12, F-63</div>
                            <div class="sidebar-contacts__item">Телефоны: <div class="sidebar-contacts__phone">(499)558-08-99, (495)789-5239</div></div>
                            <div class="sidebar-contacts__item">Почта: <div class="sidebar-contacts__email">info@ht-comp.ru</div></div>
                            <div class="sidebar-contacts__item">работаем с 10-00 до 21-00<br /> без выходных и перерыва на обед</div>
                            <div class="sidebar-contacts__map"><img src="~/i/map.jpg" width="230" height="200" alt="" /></div>
                        </div><!-- .sidebar-contacts__inner -->
                    </div><!-- .sidebar-contacts -->

                </aside><!-- .sidebar -->


                <main class="content" id="ContentId">
                    @RenderBody()
                </main>


                <aside class="filter__block">
                    <div class="filter">
                        <div class="filter__title"><span>Фильтры</span></div>
                        <div class="filter__inner">

                            <div class="filter__section  filter__price">
                                <div class="filter__section-title">Цена</div>
                                <div class="filter__label">от</div>
                                <input type="text" value="" class="filter__input" />
                                <div class="filter__label">до</div>
                                <input type="text" value="" class="filter__input" />
                            </div><!-- .filter__section -->



                            <button class="button">Применить фильтры</button>

                        </div><!-- .filter__inner -->
                    </div>
                </aside>
                <!-- .filter -->
            </main>
        @* </div> *@<!-- .middle -->

        <footer class="footer">

            <div class="footer__top">

                <nav class="footer__nav">
                    <ul>
                        <li><a href="#">Гарантия</a></li>
                        <li>@Ajax.ActionLink("Доставка", "Delivery", "Home", new { }, new AjaxOptions { UpdateTargetId = "ContentId" })</li>
                        <li>@Ajax.ActionLink("Контакты", "Contacts", "Home", new { }, new AjaxOptions { UpdateTargetId = "ContentId" })</li>
                        <li>@Ajax.ActionLink("О компании", "About", "Home", new { }, new AjaxOptions { UpdateTargetId = "ContentId" })</li>
                        <li><a href="#">Оптовикам</a></li>

                    </ul>
                </nav>


            </div><!-- .footer__top -->

            <div class="footer__bottom">

                <div class="footer__copyright">Гипер Трейд<br /> Все права защищены, 2017 г.</div>

                <div class="footer__contacts">
                    <p>ТК "Савеловский, павилионы: E-12, F-63</p>
                    <p>Телефоны: <span class="footer__contacts-phones">(499)558-08-99, (495)789-5239</span></p>
                    <p>Почта: info@ht-comp.ru</p>
                    <p class="footer__contacts-time">Работаем с 10-00 до 21-00 без выходных<br /> и перерыва на обед</p>
                </div><!-- .footer__contacts -->

            </div><!-- .footer__bottom -->

        </footer><!-- .footer -->

    </div><!-- .wrapper -->
    </div><!-- .container -->


</body>
</html>


<script type="text/javascript">
    $(function () {
        //$(".product__buy").click(function () {
        $(".content").on('click', '.product__buy', function () {
            var recordToAdd = $(this).attr("data-id");
            //alert("_laout_recordToAdd =" + recordToAdd);
            if (recordToAdd != '') {

                $.post("/ShoppingCart/AddToCart", { "id": recordToAdd },
                    function (data) {
                        $('.header__cart-count-2').text(data.CartCount);
                        $('a[data-id=' + recordToAdd + ']').toggleClass(".item__buy a_visited");

                    });

            };


        });

        //$(".test_clk").click(function () {
        //    alert("AAAAAAAAAAAAAAAA");
        //});

    });
</script>