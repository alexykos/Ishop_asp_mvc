@model iShop_ht.Models.Order

@{
    ViewBag.Title = "Оформление заказа:";
    Layout = "~/Views/Shared/_Layout_notTree.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")"
        type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"
        type="text/javascript"></script>

<div class="registration">
    <div class="checkout__title">Оформление заказа:</div>
    @using (Html.BeginForm("AddressAndPayment", "Checkout", FormMethod.Post, new { @class = "checkout" }))
    {
        <fieldset>
            @Html.ValidationSummary()


            @*<p>Телефон</p>
                @Html.TextBoxFor(m => m.Phone, new { @class = "registration__name2",@name = "tel", @type = "tel" })

                <p>Почта</p>
                @Html.TextBoxFor(m => m.Email, new { @class = "registration__name2" })*@

            <ul class="registration__spisok">
                <li>
                    <p class="registration__name">Покупатель</p>
                    <div class="registration__klient flex">
                        <label class="registration__klient_label registration__klient_label1 flex">
                            <input type="radio" name="is_company" id="customerType1" value="0" checked>
                            <span>Частное лицо</span>
                        </label>
                        <label class="registration__klient_label registration__klient_label2 flex">
                            <input type="radio" name="is_company" id="customerType2" value="1">
                            <span>Организация</span>
                        </label>
                    </div>
                </li>
                <li class="registration__organization wow fadeInUp" data-wow-duration="1s" data-wow-delay="0s">
                    <p class="registration__name">Реквизиты организации</p>
                   @* <input class="registration__input" name="search" type="search" placeholder="Поиск по названию, адресу, ИНН или ОГРН" >*@
                    <div class="registration__organization_block">
                        <ul>
                            <li>
                                <p class="registration__name2">Название компании <span>*</span></p>
                                <input class="registration__input" name="company" type="text">
                            </li>
                            <li>
                                <p class="registration__name2">ИНН <span>*</span></p>
                                <input class="registration__input" name="inn" type="text">
                            </li>
                            <li>
                                <p class="registration__name2">КПП <span>*</span></p>
                                <input class="registration__input" name="kpp" type="text">
                            </li>
                            <li>
                                <p class="registration__name2">Юридический адрес<span>*</span></p>
                                <input class="registration__input" name="juraddr" type="text">
                            </li>
                            <li>
                                <p class="registration__name2">Название банка<span>*</span></p>
                                <input class="registration__input" name="bank" type="text">
                            </li>
                            <li>
                                <p class="registration__name2">БИК<span>*</span></p>
                                <input class="registration__input" name="bik" type="text">
                            </li>
                            <li>
                                <p class="registration__name2">р/с<span>*</span></p>
                                <input class="registration__input" name="rs" type="text">
                            </li>
                            <li>
                                <p class="registration__name2">к/с<span>*</span></p>
                                <input class="registration__input" name="ks" type="text">
                            </li>
                        </ul>
                    </div>
                </li>
                <li>
                    <p class="registration__name">Доставка</p>
                
                        <div class="registration__delivery flex">
                        <label class="registration__delivery_label registration__delivery_label1 flex">
                            <input type="radio" name="delivery" id="deliveryMySelfAaP" checked>
                            <span>Самовывоз</span>
                        </label>
                        <label class="registration__delivery_label registration__delivery_label1 flex">
                            <input type="radio" name="delivery" id="deliveryAaP">
                            <span>Доставка</span>
                        </label>
                    </div>
                
                    <div class="delivery flex">
                        <select name="dostavka" class="dostavka__select" disabled>
                            <option selected = "selected" value="195032">Самовывоз ВКЦ "Савеловский", пав. F63 (бесплатно)</option>
                            <option value="202373">Курьерская служба EMS (стоимость рассчитывается по тарифам компании), при 100% предоплате</option>
                            <option value="225005">Доставка до Московского терминала ТК "СДЭК" (вес до 20 кг) 200 руб, при 100% предоплате</option>
                            <option value="17477">Доставка по Москве за пределы МКАД (вес до 20 кг) 400 руб. + 40 руб/км, оплата при получении </option>
                            <option value="16778">Доставка по Москве в пределах МКАД на завтра (вес до 20 кг) 400 руб, оплата при получении </option>
                            <option value="207483">Доставка до Московского терминала ТК "ПЭК" (вес до 20 кг) 400 руб, при 100% предоплате</option>
                            <option value="207483">Доставка до Московского терминала ТК "Деловые Линии" (вес до 20 кг) 400 руб, при 100% предоплате</option>
                            <option value="16777">Доставка по Москве в пределах МКАД сегодня (вес до 10 кг) 500 руб, оплата при получении</option>
                            <option value="227980">Доставка по Москве в пределах МКАД срочная сегодня (вес до 10 кг) 600 руб, оплата при получении</option>
                        </select>
                    </div>
                </li>
                <li class="address">
                    <p class="registration__name">Адрес доставки</p>
                    <div class="address__block divtextareaNon">
                        @Html.TextAreaFor(
                                            m => m.Address,
                                            new { @class = "message__block", name = "address", placeholder = "" }
                                        )
                        @*<textarea name="address" placeholder="" class="message__block" required></textarea>*@
                    </div>
                </li>
                @*<li class="sposob">
                    <p class="registration__name">Способ оплаты</p>
                    <div class="registration__klient flex">
                        <label class="registration__klient_label flex">
                            <input type="radio" name="oplata" id="customerType3" checked>
                            <span>наличными</span>
                        </label>
                        <label class="registration__klient_label flex">
                            <input type="radio" name="oplata" id="customerType4">
                            <span><img src="i/cards.png" alt=""> (при получении)</span>
                        </label>
                        <label class="registration__klient_label flex">
                            <input type="radio" name="oplata" id="customerType5">
                            <span><img src="i/cards.png" alt=""> (онлайн)</span>
                        </label>
                    </div>
                </li>*@
                <li class="kontact__info">
                    <p class="registration__name">Контактная информация</p>
                    <ul>
                        <li>
                            <p class="registration__name2">ФИО (полностью) <span>*</span></p>
                            @Html.TextBoxFor(m => m.FIO, new { @class = "registration__input", name = "fio", type = "text" })
                            @*<input class="registration__input" name="fio" type="text" required>*@
                        </li>
                        <li>
                            <p class="registration__name2">E-mail (для оплаты) <span>*</span></p>
                            @Html.TextBoxFor(m => m.Email, new { @class = "registration__input", name = "email", type = "email" })
                            @*<input class="registration__input" name="email" type="email" required>*@
                        </li>
                        <li>
                            <p class="registration__name2">Мобильный <span>*</span></p>
                            @Html.TextBoxFor(m => m.Phone, new { @class = "registration__input input_mask", @name = "tel", @type = "tel" })
                            @*<input class="registration__input input_mask" name="tel" type="tel" required>*@
                        </li>
                        <li>
                            <p class="registration__name2">Дополнительный</p>
                            @Html.TextBoxFor(m => m.Phone2, new { @class = "registration__input input_mask", @name = "tel2", @type = "tel" })
                            @*<input class="registration__input input_mask" name="tel2" type="tel">*@
                        </li>
                    </ul>
                </li>
                <li>
                    <p class="registration__name">Контактная информация</p>
                    <textarea name="message" placeholder="" class="message__block"></textarea>
                </li>
            </ul>
            @*@Html.EditorForModel()*@
        </fieldset>


        <input type="submit" value="Оформить заказ" class="button" />
    }
</div>
